/* **************************************** ESTILOS DEL NAV /* **************************************** */


nav#menu {
  background: #4F6970;
  height: 35px;
  border-radius: 10px 10px 0 0;
}

  nav#menu ul {
    list-style: none outside none;
    margin: 0;
    padding: 0;
  }

  nav#menu li {
    display: inline;
  }

  nav#menu a{
    color: #FFFFFF;
    display: block;
    float: left;
    font-size: 1em;
    font-weight: bold;
    margin: 4px 4px 4px;
    padding: 5px 35px;
    text-decoration: none;
    text-transform: capitalize;
  }

  nav#menu a.active, nav#menu a:hover{
    -moz-border-radius: 6px;
    -webkit-border-radius: 6px;
    -o-border-radius: 6px;
    background-color: #e1e279;
    color: #FFFFFF
  }

article {
  background-color: #fdfdfd;
  margin: 4px 0 0 0;
  padding-top: 6px;
  min-height: 440px;
}

  article #article-content {
    /* background: #e7e7e7 url(../images/img05.gif) repeat-y scroll;
