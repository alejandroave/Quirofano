  }

#aside-nav {
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  -o-border-radius: 10px;
  background-color: #C5DFE7; /* #EEEEEE; */
  border: 1px solid #8DBBC8;
  min-height: 410px;
  padding: 0 0 10px 0;
  width: 204px !important;
  box-shadow: 3px 3px 3px #999999;
}

  #aside-nav h2 {
    color: black;
    font-size: 1.3em;
    margin-top: 15px;
    margin-left: 5px;
  }

  #aside-nav ul {
    margin: 10px 3px;
  }

  #aside-nav ul ul li {
    border-bottom: 1px solid white;
    padding-bottom: 2px;
    margin-bottom: 2px;
  }

  #aside-nav li a {
    color: #0b4050;
    font-size: 1.1em;
    letter-spacing: -0.4pt;
    padding: 3px;
    text-decoration: none;
  }

  #aside-nav li a:hover {
    text-decoration: underline;
  }

section h1 {
  color: #454545;
